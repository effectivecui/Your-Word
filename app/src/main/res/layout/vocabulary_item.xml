<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/vocabulary_item_margin"
    android:layout_marginRight="@dimen/vocabulary_item_margin"
    android:layout_marginBottom="@dimen/vocabulary_item_margin_bottom"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/bt_margin"
            android:layout_marginBottom="@dimen/bt_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/en_word"
                android:layout_marginLeft="@dimen/bt_margin"
                android:layout_marginRight="13dp"
                android:maxWidth="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/en_word_size"/>

            <ImageView
                android:id="@+id/bt_show"
                android:layout_marginRight="@dimen/bt_small_margin"
                android:src="@drawable/ic_arrow_drop_down_circle_black_24dp"
                style="@style/BtShowTheme"
                />

            <ImageView
                android:id="@+id/bt_edit"
                android:visibility="gone"
                android:layout_marginRight="@dimen/bt_small_margin"
                android:src="@drawable/ic_mode_edit_black_24dp"
                style="@style/BtShowTheme"
                />

            <ImageView
                android:id="@+id/bt_img"
                android:layout_marginRight="@dimen/bt_small_margin"
                android:src="@drawable/ic_image_black_24dp"
                style="@style/BtShowTheme"
                />

            <ImageView
                android:id="@+id/bt_pronounce"
                android:layout_marginRight="@dimen/bt_small_margin"
                android:src="@drawable/ic_web_asset_black_24dp"
                style="@style/BtShowTheme"
                />

            <ImageView
                android:id="@+id/bt_del"
                android:layout_marginRight="@dimen/bt_small_margin"
                android:src="@drawable/ic_cancel_black_24dp"
                style="@style/BtShowTheme"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/cn_word"
            android:layout_marginLeft="@dimen/bt_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:textSize="@dimen/cn_word_size"/>

    </LinearLayout>
</android.support.v7.widget.CardView>